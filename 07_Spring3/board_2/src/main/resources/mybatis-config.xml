<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
<!-- underscore -> camelCase 자동 매핑됨  -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

<!--  타입 앨리어스(별칭) 등록  -->
    <typeAliases>
        <typeAlias type="org.scoula.board.domain.BoardVO" alias="BoardVO"/>
    </typeAliases>
<!--  DB에 reg_date → Java에서 regDate 로 자동 매핑  -->
<!--  XML에서 BoardVO라고만 써도 전체 경로 생략 가능.-->

</configuration>
